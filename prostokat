#include <iostream>
using namespace std;

void draw_rect(int width, int height)
{
    using std::cout;
    cout << "*";
    for (int i = 0; i < width - 2; i++)
    {
        cout << "*";
    }
    cout << "*\n";

    for (int i = 0; i < height - 2; i++)
    {
        cout << "*";
        for (int j = 0; j < width - 2; j++)
        {
            cout << " ";
        }
        cout << "*\n";
    }

    cout << "*";
    for (int i = 0; i < width - 2; i++)
    {
        cout << "*";
    }
    cout << "*\n";
}

int main()
{
    draw_rect(8, 6);
    return 0;
}
