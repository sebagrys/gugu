#include <iostream>
using namespace std;


    float oceny[100], suma = 0, srednia;
    int ilosc;


    int main()
{
    {
        cout << "podaj ilosc ocen:";
        cin >> ilosc;
        for (int i = 0; i <= ilosc - 1; i++)
        {

            cout << "podaj " << i + 1 << " ocene zeby dodac do sumy:";
            cin >> oceny[i];
            suma += oceny[i];

        }
        srednia = suma / ilosc;
        cout << "srednia rowna sie : " << srednia;


        return 0;
    }
}
